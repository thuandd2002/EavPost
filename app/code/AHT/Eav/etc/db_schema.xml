<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="post" resource="default" engine="innodb" comment="Post">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="categoryid" nullable="false"  comment="Entity ID"/>
        <column xsi:type="varchar" name="name" comment="Name"/>
        <column xsi:type="text" name="images" comment="Images" nullable="false"/>
        <column xsi:type="varchar" name="content" comment="Content"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <!-- <constraint xsi:type="unique" referenceId="REFERENCE_ID">
            <column name="entity_id"/>
        </constraint> -->
        <!-- <index referenceId="INDEX_REFERENCE_ID" indexType="btree">
            <column name="another_column"/>
        </index> -->
    </table>
    <table name="categories" resource="default" engine="innodb" comment="Post">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="name" comment="Name" nullable="false"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
